{
  "name": "node-red-contrib-bit",
  "version": "1.0.0",
  "description": "Bit helper contribution package for Node-RED.",
  "dependencies": {
    "debug": "4.1.1"
  },
  "keywords": [
    "node-red",
    "Bit",
    "bit",
    "converter",
    "split"
  ],
  "engines": {
    "node": ">=4.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biancode/node-red-contrib-bit.git"
  },
  "node-red": {
    "nodes": {
      "Bit-Simple-Sixteen": "bit/bit-simple-sixteen.js",
      "Bit-Sixteen": "bit/bit-sixteen.js",
      "Bit-Simple-Thirtytwo": "bit/bit-simple-thirtytwo.js",
      "Bit-Thirtytwo": "bit/bit-thirtytwo.js"
    }
  },
  "author": "Klaus Landsdorf",
  "license": "BSD-3-Clause",
  "main": "node",
  "files": [
    "bit"
  ],
  "bugs": {
    "url": "https://github.com/biancode/node-red-contrib-bit/issues/"
  },
  "homepage": "https://biancode.github.io/node-red-contrib-bit/",
  "scripts": {
    "test": "standard --fix && mocha test --recursive --reporter dot --timeout 5000",
    "build": "gulp publish",
    "prepublish": "npm run build && npm test",
    "formatter": "standard --fix",
    "release": "npm run formatter && standard-version && npm run rewrite-changelog",
    "release:dry": "npm run formatter && npm run release  -- --dry-run",
    "release:minor": "npm run formatter && npm run release -- --release-as minor",
    "release:alpha": "npm run formatter && npm run release -- --prerelease alpha",
    "rewrite-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@node-red/nodes": "^1.0.2",
    "chai": "^4.2.0",
    "codacy-coverage": "^3.4.0",
    "conventional-changelog-cli": "^2.0.27",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-jsdoc3": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sequence": "^1.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "istanbul": "0.4.5",
    "jasmine-node": "^3.0.0",
    "js-beautify": "^1.10.2",
    "mocha": "^6.2.2",
    "nock": "^12.0.3",
    "node-red": "^1.0.4",
    "node-red-node-test-helper": "^0.2.3",
    "pump": "^3.0.0",
    "path-type": "^3.0.0",
    "should": "^13.2.3",
    "sinon": "^7.5.0",
    "standard": "^14.3.1",
    "standard-version": "^7.0.0",
    "supertest": "^4.0.2",
    "uglify-js": "^3.6.9",
    "uglify-js-harmony": "^2.7.7",
    "when": "^3.7.8"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "standard": {
    "ignore": [
      "code/",
      "node_modules/",
      "examples/",
      "bit/",
      "docs",
      "test",
      "extras"
    ]
  }
}
